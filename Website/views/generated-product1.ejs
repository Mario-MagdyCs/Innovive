<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title><%= name.charAt(0).toUpperCase() + name.slice(1) %> Design Inspiration</title>
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/font-awesome.min.css" rel="stylesheet">
	<link href="/css/global.css" rel="stylesheet">
	<link href="/css/blog.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
	<script src="/js/bootstrap.bundle.min.js"></script>

</head>

<body>
	<%-include('partials/header')%>

	<section id="blog" class="p_3 bg-light">
		<div class="container-xl">
			<div class="row blog_1">
				<div class="col-md-8">
					<div class="blog_1dt">
						<div class="blog_1dt1">
							<div class="blog_h1i1 position-relative">
							</div>
							<h3 class="mt-3" id="project-name" name="project-name"><%= name.charAt(0).toUpperCase() + name.slice(1) %> Design Inspiration</h3>
							<h5 class="mt-3" id="category" name="category"><%=category%></h5>
							<div class="grid clearfix">
								<figure>
									<!-- /generated/ -->
									<img id="project-image" name="project-image" src="<%=image%>"  class="w-100"
									alt="project-image">
								</figure>
							</div>
							<% if (additionalMaterials && additionalMaterials.length > 0) { %>
							<div class="mb-4">
							<h4 class="mt-4">Additional Materials</h4>
              				<ul class="ps-3">
                				<% additionalMaterials.forEach(mat => { %>
                  					<li><%= mat %></li>
                				<% }) %>
              				</ul>
            				<% }%>
							</div>
							
							<% if (measurements && Object.keys(measurements).length > 0) { %>
							<div class="mb-4">
            				<h4 class="mt-4 mb-1">Estimated Measurements</h4>
							<% Object.entries(measurements).forEach(([part, size]) => { %>
								<li><strong><%= part.replace(/_/g, ' ').replace(/\b\w/g, char => char.toUpperCase()) %></strong>: <%= size %></li>
								<% }); %>
							<% } %>
							</div>
							<span>
								<form action="/generate-product/generate-another" method="POST">
									<input type="hidden" name="productId" value="<%= projectId %>" />
									<button type="submit" class="button_1">
									  <span class="star-icon">âœ¨</span> Generate Another
									</button>
								</form>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<%-include('partials/footer')%>


    <script src="/js/generate-project.js"></script>
	<script>
		window.onscroll = function () { myFunction() };
		var navbar_sticky = document.getElementById("navbar_sticky");
		var sticky = navbar_sticky.offsetTop;
		var navbar_height = document.querySelector('.navbar').offsetHeight;
		function myFunction() {
			if (window.pageYOffset >= sticky + navbar_height) {
				navbar_sticky.classList.add("sticky")
				document.body.style.paddingTop = navbar_height + 'px';
			} else {
				navbar_sticky.classList.remove("sticky");
				document.body.style.paddingTop = '0'
			}
		}


		document.addEventListener("DOMContentLoaded", function () {
			document.getElementById("generate-btn").addEventListener("click", function (e) {
				e.preventDefault(); // Prevent default anchor behavior
				generateProduct();
			});
		});

	</script>

</body>


</html>